<%= form_tag(tweets_search_path, method: "get") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search user's last 20 tweets" %>
  <%= submit_tag "Search", name: nil %>
<% end %>
<br>
<h1>
  Latest tweets from: @<%= @user %>
</h1>
<ul>
  <% @tweets.each do |tweet| %>
    <li class="no-bullets"><%= tweet.full_text %></li>
    <% if !tweet.in_reply_to_screen_name.nil? %>
      <li class="no-bullets">
        Replying to <%= link_to tweet.in_reply_to_screen_name, tweets_search_path(search: tweet.in_reply_to_screen_name) %>
      </li>
    <% end %>
    <br>
  <% end %>
</ul>
